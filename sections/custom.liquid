<style>
  .custom-collection {
    display: flex;
  }

  .product-details h1 {
      font-size: 30px;
  }
  .product-details h4 {
    font-size: 16px;
  }
  select#sort-by {
    margin-top: 12px;
  }
  span.prev {
    margin: 1px 2px;
}

span.next {
    margin: 1px 2px;
}
</style>
  <select id="sort-by">
    {% assign sort_by = collection.sort_by | default : collection.default_sort_by %}
    {% for option in collection.sort_options %}
      <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>
        {{ option.name }}
      </option>
    {% endfor %}
  </select>
  {%- assign limit = 4 -%}
<div class="custom-collection">
  {% paginate collection.products by limit  %}
    {% for product in collection.products %}
      <div class="col-3">
      {%- assign featured_image = product.selected_or_first_vailable_variant.featured_image | default: product.featured_image -%}
        <a href="{{ featured_image | img_url: '1024x' }}">
               <img src="{{ featured_image | img_url: '1024x' }}" alt="{{ featured_image.alt | escape }}">
        </a>
        <div class="product-details">
            <h1>{{ product.title }}
            <h4>{{ product.price | money }}</h4>
        </div>  
      </div>
    {% endfor %}
    
</div> 
    {%- if paginate.pages > 2 -%}
      {% render  'pagination', paginate: paginate %}
    {%- endif -%}
{% endpaginate %} 
<!-- show pagination links here -->  


{% schema %}
  {
    "name": "customsss collection",
    "settings": [

     ],
      "presets":[
        {
          "name":"custom collection"
        }
      ]
    }
{% endschema %}

